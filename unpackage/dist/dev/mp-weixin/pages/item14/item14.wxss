.stage {
  width: 100vw;
  min-height: 100vh;
  background: #FF0000;
  -webkit-transition: all 0.7s linear;
  -o-transition: all 0.7s linear;
  transition: all 0.7s linear;
}
.drawer {
  width: 100vw;
  min-height: 100vh;
  background: #5F9EA0;
  position: fixed;
  left: 0;
  top: 0;
}
.drawer.transition {
  -webkit-transition: all 0.3s linear;
  -o-transition: all 0.3s linear;
  transition: all 0.3s linear;
}

